// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cashier {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  number      String?
  password    String
  transaction Transaction[]
}

// model Guide {
